{
	"manifest_version": 2,
	"version": "1.0",
	"name": "Pyload",
	"author": "D.Ducatel",
	"default_locale": "en",
	"description": "Pyload chrome extension",

	"icons": {
		"128": "img/icon128.png",
		"16": "img/icon16.png",
		"48": "img/icon48.png"
	},

	"web_accessible_resources": [
		"img/errorIcon.png",
		"img/icon128.png"
	],

	"options_page": "options/options.html",

	"background": {
		"scripts": [
			"common.js",
			"contextualMenu.js"
		]
	},

	"browser_action": {
		"default_icon": "img/favicon.png",
		"default_popup": "mainPopup/mainPopup.html"
	},

	"permissions": [
		"storage",
		"contextMenus",
		"notifications",
		"<all_urls>"
	]
	
}
